.container
    form.row.battletag-form(name='vm.form', ng-submit='vm.goToCareer()', novalidate)
        .col-sm-5.col-sm-offset-3
            .battletag-input
                input(ng-model='vm.battletag', placeholder='BattleTag#0000', required, ng-pattern='/^.*#\\d+$/')
            p.help-text.text-danger(ng-if='vm.error && vm.form.$invalid') {{ vm.error }}
        .col-sm-1
            input.btn.btn-default.btn-lg(type='submit', value='View')